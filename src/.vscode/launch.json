    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "DEBUG MOCK",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "sourceMaps": true,
            "type": "pwa-node",
            "smartStep": true,
            "program": "${workspaceFolder}/index.ts",
            "preLaunchTask": "npm: build",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "outputCapture": "std",
            "envFile": "${workspaceFolder}/debug.env",
        }        

    ]
}